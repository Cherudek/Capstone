<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/widgetItemContainer"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/white"
  android:orientation="horizontal">

  <ImageView
    android:id="@+id/widget_favourite_photo_place_id"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:backgroundTint="@color/gray"
    android:contentDescription="@string/widget_favourite_place_image"
    android:scaleType="centerCrop"
    app:layout_constraintTop_toTopOf="parent"/>

  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="3"
    android:orientation="vertical">

    <TextView
      android:id="@+id/widget_favourite_place_name"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/margin_half"
      android:fontFamily="@font/quicksand_medium"/>
    <TextView
      android:id="@+id/widget_favourite_place_address"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/margin_half"
      android:fontFamily="@font/quicksand_medium"/>
  </LinearLayout>
</LinearLayout>