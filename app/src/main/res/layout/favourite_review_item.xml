<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="@dimen/margin_half"
  android:layout_marginBottom="@dimen/margin_1x"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <android.support.v7.widget.CardView
    android:id="@+id/favourite_card_view_review"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardElevation="@dimen/margin_1x"
    app:contentPadding="@dimen/margin_1x"
    android:layout_margin="@dimen/margin_2x"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintTop_toTopOf="parent">

      <TextView
        android:id="@+id/favourite_review_author"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_medium"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/author"/>

      <TextView
        android:id="@+id/favourite_review_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/one_week_ago"/>

      <android.support.v7.widget.AppCompatRatingBar
        style="?android:attr/ratingBarStyleSmall"
        android:id="@+id/favourite_star_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rating="3.5"
        android:numStars="5"
        android:stepSize="1.0"/>

      <TextView
        android:id="@+id/favourite_review_place_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_1x"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."/>

    </LinearLayout>
  </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>