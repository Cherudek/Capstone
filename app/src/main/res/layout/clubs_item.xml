<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="@dimen/margin_1x">

    <android.support.v7.widget.CardView
      android:id="@+id/clubs_card_view"
      android:layout_width="match_parent"
      android:layout_height="110dp"
      app:cardBackgroundColor="@color/white"
      app:cardElevation="8dp"
      app:layout_constraintTop_toTopOf="parent">

      <LinearLayout
        android:id="@+id/clubs_view_foreground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
          android:id="@+id/clubs_photo_place_id"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:backgroundTint="@color/gray"
          android:scaleType="centerCrop"
          android:contentDescription="@string/clubs_photo_item"
          app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="3"
          android:orientation="vertical">

          <TextView
            android:id="@+id/club_place_name"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_half"
            android:fontFamily="@font/quicksand_medium"/>
          <TextView
            android:id="@+id/club_place_address"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_half"
            android:fontFamily="@font/quicksand_medium"/>
        </LinearLayout>
      </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>