<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="120dp"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent">

    <android.support.v7.widget.CardView
      android:id="@+id/favourite_card_view"
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:layout_margin="@dimen/margin_1x"
      android:layout_gravity="center"
      android:elevation="@dimen/cv_elevation"
      app:cardBackgroundColor="@color/white"
      app:cardElevation="16dp"
      app:contentPadding="@dimen/margin_1x"
      app:layout_constraintTop_toTopOf="parent">


      <LinearLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
          android:id="@+id/favourite_photo_place_id"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:backgroundTint="@color/gray"
          android:scaleType="centerCrop"
          app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="3"
          android:orientation="vertical">

          <TextView
            android:id="@+id/favourite_place_name"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_half"
            android:fontFamily="@font/quicksand_medium"/>
          <TextView
            android:id="@+id/favourite_place_address"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_half"
            android:fontFamily="@font/quicksand_medium"/>
        </LinearLayout>
      </LinearLayout>

    </android.support.v7.widget.CardView>
    <RelativeLayout
      android:id="@+id/view_background"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="@dimen/margin_2x"
      android:background="@color/red">

      <ImageView
        android:id="@+id/delete_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="@dimen/margin_2x"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_delete_white_24dp"/>

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_2x"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/delete_icon"
        android:fontFamily="@font/quicksand_medium"
        android:text="@string/delete_swipe_bkg"
        android:textColor="#fff"
        android:textSize="18sp"/>
    </RelativeLayout>
  </FrameLayout>
</android.support.constraint.ConstraintLayout>